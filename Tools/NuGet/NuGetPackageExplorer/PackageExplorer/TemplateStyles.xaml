<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="DetailMetadataStyle" TargetType="{x:Type StackPanel}">
        <Setter  Property="Margin" Value="0,3,0,0" />
        <Setter  Property="Orientation" Value="Horizontal" />
    </Style>

    <Style x:Key="DetailMetadataValueStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="3,0,0,0" />
    </Style>

    <Style  x:Key="DetailHyperlinkTextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="0,3,0,0" />
    </Style>

    <Style  x:Key="DetailMetadataLabelStyle" TargetType="{x:Type TextBlock}">
        <Setter  Property="FontWeight" Value="Bold" />
    </Style>

    <Style  x:Key="DetailDescriptionTextBoxStyle" TargetType="{x:Type TextBlock}">
        <Setter  Property="Margin" Value="0,8,0,8" />
        <Setter  Property="TextWrapping" Value="Wrap" />
        <Setter  Property="TextTrimming" Value="CharacterEllipsis" />
    </Style>

    <Style  x:Key="NoDependencyTextBoxStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource DetailDescriptionTextBoxStyle}">
        <Setter Property="FontStyle" Value="Italic" />
    </Style>

    <Style  x:Key="DetailDependenciesTextBoxStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource DetailDescriptionTextBoxStyle}">
    </Style>
</ResourceDictionary>